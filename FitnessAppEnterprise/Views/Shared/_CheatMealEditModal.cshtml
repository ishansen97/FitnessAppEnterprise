@model CheatMealEditModel
@{
}

<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Cheat meal</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-controller="Details" asp-action="EditCheatMeal" asp-route-id="@Model.Id" method="post">
                <div class="modal-body">
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Meal Type</label>
                        <div class="col-sm-4">
                            @Model.MealType
                            <input type="hidden" name="Model.Id" value="@Model.Id" />
                            <input type="hidden" name="Model.MealType" value="@Model.MealType" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Date</label>
                        <div class="col-sm-4">
                            <input type="date" name="Model.Created" value="@Model.Created.ToString("yyyy MMMM dd")" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Amount (g)</label>
                        <div class="col-sm-4">
                            <input type="text" name="Model.MealAmount" value="@Model.MealAmount" />
                        </div>
                    </div>
                    <input type="hidden" name="Model.UserId" value="@Model.UserId" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>