@{
    var message = "No sufficient workouts/cheatmeals to make predictions";
}

<div class="container">
    <div class="text-center">
        <h3>Make your Fitness Predictions here!!</h3>
    </div>
    @if (ViewData["isError"] != null &&
        bool.TryParse(ViewData["isError"].ToString(), out var boolVal) &&
        boolVal)
    {
        <div class="alert alert-danger">
            <span>@message</span>
        </div>
    }
    <form action="/" method="post">
        <div class="form-inline row">
            <label class="col-form-label col-sm-3">Select Date</label>
            <div class="col-sm-4">
                <input type="date" name="txtDate" class="form-control" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
            </div>
        </div>
    </form>
</div>
