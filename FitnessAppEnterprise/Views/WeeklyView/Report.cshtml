@model ReportResponseModel
@{
}

<div class="modal fade" id="@ViewData["reportModalId"]" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Workout</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Calorie Expenditure</label>
                    <div class="col-sm-4">@Model.CalorieExpenditure</div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Calorie Intake</label>
                    <div class="col-sm-4">@Model.CalorieIntake</div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Difference</label>
                    <div class="col-sm-4">@Model.Gap</div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Calorie Surplus?</label>
                    <div class="col-sm-4">@Model.IsSurplus</div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>