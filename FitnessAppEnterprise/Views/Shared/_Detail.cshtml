<div class="card card-body mr-2 box-shadow">
    <div class="row">
        <div class="col-lg-4">
            <h4>@Model.Title</h4>
            <p>@Model.Created.ToString("MM/dd/yyyy")</p>
        </div>
        <div class="col-lg-8">
            <div class="float-right">
                <a class="btn btn-info mr-1" data-toggle="modal" data-target="#exampleModal">
                    <span>View</span>
                </a>
                <a class="btn btn-secondary mr-1">
                    <span>Edit</span>
                </a>
                <a asp-controller="Details" asp-action="Delete" asp-route-id="@Model.Id" asp-route-activity="@Model.ActivityType" class="btn btn-danger mr-1">
                    <span>delete</span>
                </a>
            </div>
        </div>
    </div>
</div>

