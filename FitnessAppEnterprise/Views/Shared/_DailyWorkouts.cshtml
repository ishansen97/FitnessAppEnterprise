@model List<WorkoutEditModel>
@{
}

<div class="modal fade" id="@ViewData["workoutModalId"]" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Workout</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @foreach (var modelItem in Model)
                {
                    <div class="card card-body">
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Workout Type</label>
                            <div class="col-sm-4 col-form-label">
                                @modelItem.WorkoutType
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Date</label>
                            <div class="col-sm-4 col-form-label">
                                @modelItem.Created
                            </div>
                        </div>
                        @foreach (var field in modelItem.Fields)
                        {
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">@field.Key</label>
                                <div class="col-sm-4 col-form-label">
                                    @field.Value
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
